<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link href='//fonts.googleapis.com/css?family=Lobster&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="../styles/style.css">
  <title>Bar'booh!</title>
</head>
<body>
  <div class="row">
    <div class="logo">
      <a href="/spa"><img src="https://i.ibb.co/s5BGD7d/logo.png" width="400" class="center" alt="logo" border="0"></a>
    </div>
    <div class="header">
      <h1>Bar'booh!¬© beers review site</h1>
      <p>Everything <b>you need</b> to know about our beers (This is not a cheap copy of the Bar'bu)</p>
    </div>
  </div>
  <div class="navbar">
    <a href="/spa" class="right">Home üè†</a>
    <a href="https://github.com/ElGarra/BeersDirectory.git" class="right">About us</a>
  </div>
  
  <h1>Add a review of your favorite beer</h1>

    <!-- Form to create a beer -->
  <div class="container add-beer">

    <!-- name -->
    <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        <input class="form-control" id="inputName" placeholder="See the label ;)">
    </div>

    <!-- brand -->
    <div class="form-group">
        <label for="exampleInputEmail1">Brand</label>
        <input class="form-control" id="inputBrand" placeholder="Ex: Duvel, Delirium...">
    </div>

    <!-- type -->
      <div class="form-group">
        <label for="exampleInputEmail1">Type</label>
        <input class="form-control" id="inputType" placeholder="Ex: IPA, Lager, Pilsener...">
      </div>

    <!-- country -->
      <div class="form-group">
        <label for="exampleInputEmail1">Country</label>
        <input class="form-control" id="inputCountry" placeholder="Ex: Belgium, Germany...">
      </div>

    <!-- description -->
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Description</label>
      <textarea class="form-control" id="inputDesc" rows="2" placeholder="Insert your description here..."></textarea>
    </div>

    <!-- note -->
    <div class="form-group">
      <label for="exampleInputEmail1">Grade (0-10)</label>
      <input class="form-control" id="inputGrade" placeholder="qualify it from 0 to 10">
    </div>

    <!-- alcoholic degree -->
    <div class="form-group">
        <label for="exampleInputEmail1">Alc</label>
        <input class="form-control" id="inputAlc" placeholder="¬øWhich is the alcoholic %?">
    </div>

    <!-- image -->
    <div class="form-group">
        <label for="exampleInputEmail1">Image</label>
        <input class="form-control" id="inputImage" placeholder="Set a link with the image...">
    </div>

    <button id="buttonInsert" type="submit" class="btn btn-primary" onclick=handleInsertBeer()>Insert</button>
    <button id="buttonEdit" type="button" class="btn btn-warning" disabled> Submit Edit</button>
  </div>


  <div class="container menu-list">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Brand</th>
          <th scope="col">Type</th>
          <th scope="col">Country</th>
          <th scope="col">Description</th>
          <th scope="col">Grade (0-10)</th>
          <th scope="col">Alc (%)</th>
          <th scope="col">Image</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% for( let i = 0; i < beers.length; i++ ) { %>
          <tr id=<%=`row-id-${beers[i].id}`%> >
            <th scope="row"> <%= i + 1 %> </th>
            <td><%= beers[i].name %></td>
            <td><%= beers[i].brand %></td>
            <td><%= beers[i].type %></td>
            <td><%= beers[i].country %></td>
            <td><%= beers[i].description %></td>
            <td><%= beers[i].note %></td>
            <td><%= beers[i].alc_degree %></td>
            <td><img src="<%= beers[i].image %>"" height="150" class="center" alt="logo" border="0"></td>
            
            <td>
              <button type="button" class="btn btn-primary" onclick=handleActionEdit("<%=`row-id-${beers[i].id}`%>")>Edit review</button>
              <br>
              <br>
              <button type="button" class="btn btn-danger" onclick=handleDelete(<%= beers[i].id %>)>Delete review</button>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  
  <script src="../backend/beer.js"></script>
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

